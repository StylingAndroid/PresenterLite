<?xml version="1.0" encoding="utf-8"?>
<com.stylingandroid.presenter.engine.presentation.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:sap="http://schemas.android.com/apk/res-auto"
  android:id="@id/slide"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:gravity="center"
  android:layout_gravity="center"
  android:paddingBottom="@dimen/halfpadding"
  android:paddingTop="@dimen/halfpadding"
  sap:notes="@string/notes_relativelayout"
  sap:tweet="@string/tweet_relativelayout">

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Large"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Layouts: RelativeLayout" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    sap:showAnimation="@anim/fadein"
    sap:showPhase="1"
    android:paddingTop="@dimen/spacing"
    android:singleLine="false"
    android:text="Child positioning relative to parent and siblings" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    sap:showAnimation="@anim/fadein"
    sap:showPhase="2"
    android:paddingTop="@dimen/spacing"
    android:text="Complex layouts without nesting" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    sap:showAnimation="@anim/fadein"
    sap:showPhase="3"
    android:paddingTop="@dimen/spacing"
    android:text="Can be problems with aligning to parent bottom" />

</com.stylingandroid.presenter.engine.presentation.SlideLayout>