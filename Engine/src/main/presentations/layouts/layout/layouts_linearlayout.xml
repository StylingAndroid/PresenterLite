<?xml version="1.0" encoding="utf-8"?>
<com.stylingandroid.presenter.engine.presentation.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:sap="http://schemas.android.com/apk/res-auto"
  android:id="@id/slide"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:gravity="center"
  android:orientation="vertical"
  sap:notes="@string/notes_linearlayout"
  sap:tweet="@string/tweet_linearlayout">

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Large"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Layouts: LinearLayout" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    sap:highlightTextAppearance="@style/Widget.TextView.Medium.Code"
    android:paddingTop="@dimen/spacing"
    sap:showAnimation="@anim/fadein"
    sap:pattern="(layout_weight)"
    sap:showPhase="1"
    android:singleLine="false"
    android:text="Child positioning using layout_weight" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    sap:highlightTextAppearance="@style/Widget.TextView.Medium.Code"
    android:paddingTop="@dimen/spacing"
    sap:pattern="(&lt;div&gt;|&lt;span&gt;)"
    sap:showAnimation="@anim/fadein"
    sap:showPhase="2"
    android:text="Android equivalent to HTML &lt;div&gt; / &lt;span&gt;" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing"
    sap:showAnimation="@anim/fadein"
    sap:showPhase="3"
    android:text="Flow children either horizontally or vertically" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    sap:highlightTextAppearance="@style/Widget.TextView.Medium.Code"
    sap:pattern="(LinearLayout)"
    android:paddingTop="@dimen/spacing"
    sap:showAnimation="@anim/fadein"
    sap:showPhase="4"
    android:text="Nest LinearLayouts to create complex layouts" />

</com.stylingandroid.presenter.engine.presentation.SlideLayout>