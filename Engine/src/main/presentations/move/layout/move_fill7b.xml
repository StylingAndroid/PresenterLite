<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/transition_container"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.stylingandroid.presenter.engine.presentation.AnimatedImageView
    android:id="@+id/flat"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:contentDescription="@null"
    android:src="@drawable/move_fill_sea7a"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_chainStyle="spread_inside"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/full"
    app:layout_constraintTop_toTopOf="parent"
    app:synchronised="true" />

  <com.stylingandroid.presenter.engine.presentation.AnimatedImageView
    android:id="@+id/full"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:contentDescription="@null"
    android:src="@drawable/move_fill_sea7b"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintLeft_toRightOf="@id/flat"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:synchronised="true" />

</android.support.constraint.ConstraintLayout>
