<?xml version="1.0" encoding="utf-8"?>
<com.stylingandroid.presenter.engine.presentation.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:sap="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@id/slide"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_gravity="center"
  android:orientation="horizontal"
  android:weightSum="2"
  tools:context=".display.DisplayActivity">

  <FrameLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent">

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_layout"
      android:gravity="center_vertical"
      sap:showPhase="1"
      sap:hidePhase="2"
      sap:showAnimation="@anim/fadein"
      sap:hideAnimation="@anim/scrollupout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code1"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:showPhase="2"
      sap:hidePhase="4"
      sap:showAnimation="@anim/scrollupin"
      sap:hideAnimation="@anim/fadeout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code1"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:highlightTextAppearance="@style/Widget.TextView.Small.Code.Highlight"
      sap:pattern="(private.*?\\{)"
      sap:showPhase="4"
      sap:hidePhase="5"
      sap:showAnimation="@anim/fadein"
      sap:hideAnimation="@anim/fadeout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code1"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:highlightTextAppearance="@style/Widget.TextView.Small.Code.Highlight"
      sap:pattern="(Bitmap currentBitmap.*?;)"
      sap:showPhase="5"
      sap:hidePhase="6"
      sap:showAnimation="@anim/fadein"
      sap:hideAnimation="@anim/fadeout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code1"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:highlightTextAppearance="@style/Widget.TextView.Small.Code.Highlight"
      sap:pattern="(Bitmap comboBitmap.*?;)"
      sap:showPhase="6"
      sap:hidePhase="7"
      sap:showAnimation="@anim/fadein"
      sap:hideAnimation="@anim/fadeout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code1"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:highlightTextAppearance="@style/Widget.TextView.Small.Code.Highlight"
      sap:pattern="(Canvas.*?;)"
      sap:showPhase="7"
      sap:hidePhase="8"
      sap:showAnimation="@anim/fadein"
      sap:hideAnimation="@anim/fadeout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code1"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:highlightTextAppearance="@style/Widget.TextView.Small.Code.Highlight"
      sap:pattern="(canvas\\.draw.*?;)"
      sap:showPhase="8"
      sap:hidePhase="9"
      sap:showAnimation="@anim/fadein"
      sap:hideAnimation="@anim/scrollupout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code2"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:showPhase="9"
      sap:hidePhase="10"
      sap:showAnimation="@anim/scrollupin"
      sap:hideAnimation="@anim/fadeout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code2"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:highlightTextAppearance="@style/Widget.TextView.Small.Code.Highlight"
      sap:pattern="(Drawable.*?null\\);)"
      sap:showPhase="10"
      sap:hidePhase="11"
      sap:showAnimation="@anim/fadein"
      sap:hideAnimation="@anim/fadeout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code2"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:highlightTextAppearance="@style/Widget.TextView.Small.Code.Highlight"
      sap:pattern="(drawable\\.setBounds.*?;)"
      sap:showPhase="11"
      sap:hidePhase="12"
      sap:showAnimation="@anim/fadein"
      sap:hideAnimation="@anim/fadeout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code2"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:highlightTextAppearance="@style/Widget.TextView.Small.Code.Highlight"
      sap:pattern="(drawable\\.draw.*?;)"
      sap:showPhase="12"
      sap:hidePhase="13"
      sap:showAnimation="@anim/fadein"
      sap:hideAnimation="@anim/fadeout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code2"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:highlightTextAppearance="@style/Widget.TextView.Small.Code.Highlight"
      sap:pattern="(imageView.*?;)"
      sap:showPhase="13"
      sap:hidePhase="14"
      sap:showAnimation="@anim/fadein"
      sap:hideAnimation="@anim/fadeout"
      android:layout_height="match_parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:layout_width="match_parent"
      style="@style/Widget.TextView.Small.Code"
      android:text="@string/gm_flatten_code2"
      android:gravity="center_vertical"
      android:visibility="invisible"
      sap:showPhase="14"
      sap:showAnimation="@anim/fadein"
      sap:hideAnimation="@anim/fadeout"
      android:layout_height="match_parent" />
  </FrameLayout>

  <FrameLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent">

    <com.stylingandroid.presenter.engine.presentation.TransitionLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      sap:scenes="gm_flatten2a,gm_flatten2b,gm_flatten2c,gm_flatten2d,gm_flatten2e,gm_flatten2f,gm_flatten2g,gm_flatten2h,gm_flatten2i,gm_flatten2j"
      sap:transitionManager="@transition/flatten"
      sap:transitionPhases="3,5,6,8,10,11,13,14,15" />
  </FrameLayout>


</com.stylingandroid.presenter.engine.presentation.SlideLayout>