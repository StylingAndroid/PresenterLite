      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="0.0"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell_end"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="200"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="0.2"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="0.1"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell_end"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="400"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="0.4"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="0.345"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell_end"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="600"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="0.6"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="0.8"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell_end"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="800"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />

    <TextView
      android:text="0.8"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />


    <TextView
      android:text="0.9"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell_end"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />


    <TextView
      android:text="1000"
      android:background="@drawable/cell_bottom"
      style="@style/Widget.TextView.Medium.Dark"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />


    <TextView
      android:text="1.0"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell_bottom"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />


    <TextView
      android:text="1.0"
      style="@style/Widget.TextView.Medium.Dark"
      android:background="@drawable/cell_bottom_end"
      android:layout_gravity="fill_horizontal"
      android:gravity="center" />


  </GridLayout>


</com.stylingandroid.presenter.engine.presentation.SlideLayout>