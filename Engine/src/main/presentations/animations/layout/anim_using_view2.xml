<?xml version="1.0" encoding="utf-8"?>

<com.stylingandroid.presenter.engine.presentation.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:sap="http://schemas.android.com/apk/res-auto"
  android:id="@id/slide"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:gravity="center"
  android:orientation="vertical"
  sap:nextInAnimation="@anim/none"
  sap:nextOutAnimation="@anim/none">

  <TextView
    style="@style/Widget.TextView.Large"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Using View Animations" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutAnimation="@anim/layout_anim">

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:id="@+id/title4"
      style="@style/Widget.TextView.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Layout Animations"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:visibility="visible" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:id="@+id/subtitle4"
      style="@style/Widget.TextView.Small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="layout_item_anim.xml"
      android:layout_alignParentLeft="true"
      android:layout_below="@id/title4"
      android:visibility="visible" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
      android:id="@+id/code4"
      style="@style/Widget.TextView.Small.Code"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/using_view_item_anim"
      android:layout_alignParentLeft="true"
      android:layout_below="@id/subtitle4"
      android:visibility="visible" />

  </RelativeLayout>
</com.stylingandroid.presenter.engine.presentation.SlideLayout>