<?xml version="1.0" encoding="utf-8"?>

<com.stylingandroid.presenter.engine.presentation.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:sap="http://schemas.android.com/apk/res-auto"
  android:id="@id/slide"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:gravity="center"
  sap:tweet="@string/anim_tweet_anim1"
  android:orientation="vertical">

  <TextView
    style="@style/Widget.TextView.Large"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View Animation" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Animate any object which extends View "
    sap:showPhase="1" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Supported from Android 1.0"
    sap:showPhase="2" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Great for Activity / Fragment transitions"
    sap:showPhase="3" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Animate relative to parent"
    sap:showPhase="4" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Implement in code or XML in res/anim"
    sap:showPhase="5" />

  <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
    style="@style/Widget.TextView.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Great for translate, rotate, scale, &amp; alpha"
    sap:showPhase="6" />

</com.stylingandroid.presenter.engine.presentation.SlideLayout>