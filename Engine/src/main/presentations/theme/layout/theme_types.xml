<?xml version="1.0" encoding="utf-8"?>
<com.stylingandroid.presenter.engine.presentation.ConstraintSlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@id/slide"
    app:tweet="@string/theme_tweet_title"
    app:nextInAnimation="@anim/fadein"
    app:nextOutAnimation="@anim/fadeout">

    <TextView
        android:id="@+id/styles"
        style="@style/Widget.TextView.XLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
        style="@style/Widget.TextView.Stamp.Big.Faded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-30"
        android:text="Style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:showAnimation="@anim/fadein"
        app:showPhase="2" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
        style="@style/Widget.TextView.Stamp.Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-30"
        android:text="Style"
        app:hideAnimation="@anim/fadeout"
        app:hidePhase="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:showAnimation="@anim/stamp"
        app:showPhase="1" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
        style="@style/Widget.TextView.Stamp.Big.Faded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="30"
        android:text="Theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:showAnimation="@anim/fadein"
        app:showPhase="3" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
        style="@style/Widget.TextView.Stamp.Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="30"
        android:text="Theme"
        app:hideAnimation="@anim/fadeout"
        app:hidePhase="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:showAnimation="@anim/stamp"
        app:showPhase="2" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
        style="@style/Widget.TextView.Stamp.Big.Faded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:rotation="30"
        android:text="Text\nAppearance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80"
        app:showAnimation="@anim/fadein"
        app:showPhase="4" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
        style="@style/Widget.TextView.Stamp.Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:rotation="30"
        android:text="Text\nAppearance"
        app:hideAnimation="@anim/fadeout"
        app:hidePhase="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80"
        app:showAnimation="@anim/stamp"
        app:showPhase="3" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
        style="@style/Widget.TextView.Stamp.Big.Faded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:rotation="-30"
        android:text="Theme\nOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80"
        app:showAnimation="@anim/fadein"
        app:showPhase="5" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
        style="@style/Widget.TextView.Stamp.Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:rotation="-30"
        android:text="Theme\nOverlay"
        app:hideAnimation="@anim/fadeout"
        app:hidePhase="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80"
        app:showAnimation="@anim/stamp"
        app:showPhase="4" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
        style="@style/Widget.TextView.Stamp.Big.Faded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:rotation="-30"
        android:text="Theme\nAttribute"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:showAnimation="@anim/fadein"
        app:showPhase="6" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
        style="@style/Widget.TextView.Stamp.Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:rotation="-30"
        android:text="Theme\nAttribute"
        app:hideAnimation="@anim/fadeout"
        app:hidePhase="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:showAnimation="@anim/stamp"
        app:showPhase="5" />

    <com.stylingandroid.presenter.engine.presentation.HighlightedTextView
        style="@style/Widget.TextView.Stamp.Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="60dp"
        android:rotation="0"
        android:text="WTF?"
        android:textSize="300sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50"
        app:showAnimation="@anim/stamp"
        app:showPhase="6" />

</com.stylingandroid.presenter.engine.presentation.ConstraintSlideLayout>